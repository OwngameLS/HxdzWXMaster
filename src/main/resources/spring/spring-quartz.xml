<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="quartzScheduler"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
          autowire="no"><!-- 容器启动随机启动lazy-init="false" autowire="no"-->
        <property name="autoStartup" compareValue="true"/>
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
        <property name="applicationContextSchedulerContextKey" compareValue="applicationContextKey"/>
        <property name="waitForJobsToCompleteOnShutdown" compareValue="true"/>
        <property name="configLocation" compareValue="classpath:quartz.properties"/>
    </bean>
    <bean id="jobDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass">
            <compareValue>com.owngame.utils.MyQuartzJobBean</compareValue>
        </property>
        <property name="durability" compareValue="true"/>
    </bean>

</beans>