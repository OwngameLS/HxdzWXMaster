<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 为Dao接口方法提供SQL语句配置 -->
<mapper namespace="com.owngame.dao.ContactDao">
    <select id="queryById" resultType="Contact" parameterType="long">
        select * from contact where id=#{id}
    </select>

    <select id="queryLikeName" resultType="Contact" parameterType="String">
        select * from contact where name like #{name}
    </select>

    <select id="queryByGroup" resultType="Contact" parameterType="String">
        select * from contact where groupname=#{groupname}
    </select>

    <select id="getGroups" resultType="String">
        select groupname from contact group by groupname
    </select>

    <select id="queryAll" resultType="Contact">
        select * from contact order by groupname asc
    </select>

    <insert id="insert" parameterType="Contact">
        insert into contact
        (id, groupname,name, title,phone,description)
        values
        (#{id}, #{groupname},#{name},#{title},#{phone},#{description})
    </insert>

    <update id="update" parameterType="Contact">
        update contact set
        groupname=#{groupname},
        name=#{name},
        title=#{title},
        phone=#{phone},
        description=#{description}
        where id=#{id}
    </update>

    <update id="updateGroup" parameterType="com.owngame.entity.GroupName">
        update contact set
        groupname=#{newName}
        where groupname=#{originalName}
    </update>

    <update id="updateGroupWithId" parameterType="com.owngame.entity.GroupName">
        update contact set
        groupname=#{newName}
        where id=#{id}
    </update>


    <delete id="delete" parameterType="long">
        delete from contact where id=#{id}
    </delete>

    <delete id="deleteGroup" parameterType="String">
        delete from contact where groupname=#{groupname}
    </delete>

    <delete id="deleteAll">
        truncate table contact
    </delete>
</mapper>